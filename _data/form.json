[
   {
       "name":"about_you",
       "label":"About You",
       "help":"First off let's find out who you are. If completing a form like this is difficult for you to manage please get in touch via applications@thecodersguild.org.uk and we will arrange an alternative way for you to apply.", 
       "fields":{
          "first_name":{
             "type":"text",
             "required":true,
             "label":"First Name",
             "class":"first",
             "help":"",
             "required_message":"First Name is required."
          },
          "last_name":{
             "type":"text",
             "required":true,
             "label":"Last Name",
             "class":"last",
             "help":"",
             "required_message":"Last Name is required."
          },
          "date_of_birth":{
             "type":"date_picker",
             "required":true,
             "label":"Date of Birth",
             "class":"last",
             "help":"",
             "required_message":"Date of Birth is required."
          },
          "email":{
             "type":"text",
             "required":true,
             "label":"Email",
             "class":"wide",
             "help":"don't worry, we're not going to spam you",
             "required_message":"A valid email address is required."
          },
          "phone_number":{
             "type":"text",
             "required":true,
             "label":"Phone Number",
             "class":"wide",
             "help":"If we need any clarification with your application it is quicker for us to text you.",
             "required_message":"Phone Number is required"
          },
          "pronouns":{
             "type":"radio",
             "required":true,
             "label":"Pronouns",
             "class":"first",
             "help":"Help us to address you properly",
             "options":[
                "he\/him",
                "she\/her",
                "they\/them",
                "other"
             ],
             "required_message":"Pronouns is required",
             "other":"other",
             "other_text":"Please enter below"
          },
          "opportunity":{
            "type":"select",
            "required":false,
            "label":"Which vacancy are you applying for?",
            "class":"wide",
            "help":"If you have come here via the .gov find an apprenticeship site or a job board the vacancy will be for a specific organisation - if not applicable just leave this blank",
            "options":{
               "Pace IT Systems": {
                "name": "Pace IT Systems",
                 "job_title" : "Software Test Analyst",
                 "url": "https://www.findapprenticeship.service.gov.uk/apprenticeship/-655572",
                 "location": "Wakefield"
               },
              "Lucy Zodion": {
                "name": "Lucy Zodion, West Yorkshire",
                "job_title": "Software Tester",
                "url": "https://www.findapprenticeship.service.gov.uk/apprenticeship/-659198",
                "location": "Sowerby Bridge"
              }
            },
            "required_message":"Please provide an answer"
         }
       }
    },
    {
       "name":"application",
       "label":"Application Questions",
       "help":"This course is not right for everyone - these questions will help us make a judgement on whether this pilot course is the right learning path for you. If you are unsuccessful we will still be able to point you to other resources and programmes. Please fill out the questions to the best of your ability.",
       "fields":{
          "why_did_user_apply":{
             "type":"textarea",
             "required":true,
             "label":"What has made you apply for this course?",
             "class":"wide",
             "help":"More than 50 but less than 200 words please :)",
             "required_message":"Please provide an answer"
          },
          "testing_experience":{
             "type":"textarea",
             "required":false,
             "label":"Do you have any experience in software testing? If so, can you tell us about it? (optional)",
             "class":"wide",
             "help":"This question is optional but if you choose to answer please make sure it is less that 200 words",
             "required_message":"Please provide an answer"
          },
          "website_example":{
             "type":"textarea",
             "required":true,
             "label":"Can you tell us about a time when you were frustrated by software/app, and what did you do about it?",
             "class":"wide",
             "help":"More than 50 but less than 200 words please :)",
             "required_message":"Please provide an answer"
          }
       }
    },
    {
       "name":"demographic_data",
       "label":"Demographic Data",
       "help":"The DfE (who are paying for the course) have to ask it. All of this data will be held securely and will only be used for anoymous data processsing and evaluation. Feel free to choose the prefer not to say option on any questions you don't feel like answering and please don't let it put you off. For more details please see our privacy policy.",
       "fields":{
          "education":{
             "type":"select",
             "required":true,
             "label":"What's the highest level of Education you have completed?",
             "class":"wide",
             "help":"",
             "options":{
                 "1": "Less than Secondary School",
                 "2": "Secondary School \/  GCSE - with grades 3, 2, 1 or grades D, E, F, G (or similar)",
                 "3": "Secondary School \/ GCSE - with grades c and above\/ 4 and above",
                 "4": "Secondary School \/ College A\/AS levels",
                 "5": "Some Further Education",
                 "6": "College Diploma \/ Certificate",
                 "7": "Undergraduate Degree",
                 "8": "Masters \/ Graduate Degree",
                 "9": "Doctorate"
              },
             "required_message":"Please provide an answer"
          },
          "dependants":{
             "type":"radio",
             "required":true,
             "label":"Do you have caring responsibilities for children or other adults?",
             "class":"wide",
             "help":"",
             "options":[
                "Yes caring for children",
                "Yes caring for adults",
                "No caring responsibilites"
             ],
             "required_message":"Please provide an answer"
          },
          "disabilities":{
             "type":"radio",
             "required":true,
             "label":"Do you consider yourself to have a disability \/ long term health condition?",
             "class":"wide",
             "help":"",
             "options":[
                "Yes",
                "No",
                "Prefer not to say"
             ],
             "required_message":"Please provide an answer"
          },
          "ethnicity":{
             "type":"radio",
             "required":true,
             "label":"Ethnicity",
             "class":"wide",
             "help":"",
             "options":[
                "White British",
                "All other white",
                "Mixed \/ multiple ethnic groups",
                "Asian \/ Asian British",
                "Black \/ African \/ Caribbean \/ Black British",
                "Other ethnic group",
                "Prefer not to say"
             ],
             "required_message":"Please provide an answer",
             "other":"Other ethnic group",
             "other_text":"Please provide us with your ethnicity"
          },
          "married":{
             "type":"radio",
             "required":true,
             "label":"Are you Married or In civil partnership",
             "class":"wide",
             "help":"",
             "options":[
                "Yes",
                "No",
                "Prefer not to say"
             ],
             "required_message":"Please provide an answer"
          },
          "pregnant":{
             "type":"radio",
             "required":true,
             "label":"Are you currently pregnant \/ on parental \/ maternity leave:",
             "class":"wide",
             "help":"",
             "options":[
                "Yes",
                "No",
                "Prefer not to say"
             ],
             "required_message":"Please provide an answer"
          },
          "religion":{
             "type":"radio",
             "required":true,
             "label":"Religion \/ belief",
             "class":"wide",
             "help":"",
             "options":[
                "No religion",
                "Christian",
                "Buddhist",
                "Hindu",
                "Jewish",
                "Muslim",
                "Sikh",
                "Any other religion",
                "Prefer not to say"
             ],
             "required_message":"Please provide an answer",
             "other":"Any other religion",
             "other_text":"Please provide your religion"
          },
          "sexual_orientation":{
             "type":"radio",
             "required":true,
             "label":"Sexual Orientation?",
             "class":"wide",
             "help":"",
             "options":[
                "Heterosexual",
                "Homosexual",
                "Bisexual",
                "Prefer not to say",
                "Other"
             ],
             "required_message":"Please provide an answer",
             "other":"Other",
             "other_text":"Please enter your sexual orientation"
          },
          "gender":{
             "type":"radio",
             "required":true,
             "label":"Gender?",
             "class":"wide",
             "help":"",
             "options":[
                "Male",
                "Female",
                "Other",
                "Prefer not to say"
             ],
             "required_message":"Please provide an answer",
             "other":"Other",
             "other_text":"Please enter your gender"
          },
          "gender_reassignment":{
             "type":"radio",
             "required":true,
             "label":"Gender Reassignment?",
             "class":"wide",
             "help":"",
             "options":[
                "Yes",
                "No",
                "Prefer not to say"
             ],
             "required_message":"Please provide an answer"
          }
       }
    },
    {
       "name":"eligibility",
       "label":"Are you eligible for funding?",
       "help":"This course is Gov funded and FREE for you - so obviously there is paperwork for us to complete. We need this information to be able to progress your application so please don't leave any out.",
       "fields":{
          "employment":{
             "type":"radio",
             "required":true,
             "label":"Employment Status",
             "class":"wide",
             "help":"",
             "options":[
                "in full-time employment",
                "in part-time employment",
                "self-employed",
                "unemployed for more than 12 months",
                "unemployed for less than 12 months",
                "in training \/education",
                "retired",
                "long term sickness",
                "parental leave \/ other caring responsibilities"
             ],
             "required_message":"Please provide an answer",
             "other":"in training \/education",
             "other_text":"If you are studying, what are you studying and where?"
          },
          "employment_eligability":{
             "type":"radio",
             "required":true,
             "label":"Do you have the right to work in the UK?",
             "class":"wide",
             "help":"",
             "options":[
                "Yes",
                "No",
                "Unsure"
             ],
             "required_message":"Please provide an answer"
          },
          "residence":{
              "type":"radio",
              "required":true,
              "label":"Do you have permanent residency in the UK?",
              "class":"wide",
              "help":"",
              "options":[
                 "Yes",
                 "No",
                 "Unsure"
              ],
              "required_message":"Please provide an answer"
           },
          "provider":{
           "type":"radio",
           "required":true,
           "label":"Course Provider",
           "class":"first",
           "help":"These courses are funded through your authority, please let us know which one",
           "options":[
              "Liverpool City Region",
              "West Yorkshire Combined Authority",
              "Other"
           ],
           "required_message":"Please provide an answer"
          },
          "occupation":{
             "type":"text",
             "required":false,
             "label":"Occupation",
             "class":"wide",
             "help":"What is your current job title (if applicable)",
             "required_message":"Please provide an answer"
          },
          "employer":{
              "type":"text",
              "required":false,
              "label":"Who is your current employer?",
              "class":"wide",
              "help":"Please enter the name of your current employer (if applicable)",
              "required_message":"Please provide an answer"
           },
          "postcode":{
             "type":"text",
             "required":true,
             "label":"Postcode",
             "class":"wide",
             "help":"",
             "required_message":"Please provide a valid postcode"
          },
          "address":{
             "type":"textarea",
             "required":true,
             "label":"What is your full residential address?",
             "class":"wide",
             "required_message":"Please provide an answer"
          },
          "national_insurance":{
             "type":"text",
             "required":true,
             "label":"National Insurance Number",
             "class":"wide",
             "help":"",
             "required_message":"Please provide a valid NI number"
          }
       }
